<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="memeCreationParentBox" xmlns="http://javafx.com/javafx/8">
  <VBox fx:id="memeCreationImageBox">
    <HBox>
      <ImageView fx:id="memeImage" cache="true" fitHeight="500" fitWidth="500" pickOnBounds="true"
                 preserveRatio="true"/>
      <ImageView fx:id="verticalRule" cache="true" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/vertical_rule.png"/>
      </ImageView>
    </HBox>
    <ImageView fx:id="horizontalRule" cache="true" pickOnBounds="true" preserveRatio="true">
      <Image url="@../images/horizontal_rule.png"/>
    </ImageView>
  </VBox>
</VBox>
